- @articles.each do |article|
  %ul
    %li
      = link_to image_tag(article.picture_url) , article if article.picture.present?
      %h2= link_to article.title, article
      %p.extend= truncate(article.body, length: 500, separator: ' ')
      %td= link_to 'Edit', edit_article_path(article)
      %td= link_to 'Destroy', article, method: :delete, data: { :confirm => 'Are you sure?' }
%br


